			media = soma / cont;
			$("#mediaVal").text("Média:" + media.toFixed(2))

			
		})

		$(document).ready(function () {
			$('.sidebar-menu').tree()
		})
		

		$("#plotar").on('click', function(){

			sendFile($("#select").children("option:selected").val())
			$("#dados").removeClass('hidden')
			$("#dadosVelocidade").removeClass('hidden')
			$("#dadosTemperatura").removeClass('hidden')
			
		})
		
