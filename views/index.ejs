	<script>

		$("#media").on('click', function(){
			data_ini = $("#data_ini").val()
			data_fim = $("#data_fim").val()

			cont = 0
			soma = 0

			time.map((e) => {
				if(e >= data_ini && e <= data_fim){
					soma += data[time.indexOf(e)]
					cont++;
				}
			})

			media = soma / cont;
			$("#mediaVal").text("Média:" + media.toFixed(2))

			
		})

		$("#mediaVelocidade").on('click', function(){
			data_ini = $("#data_ini_velocidade").val()
			data_fim = $("#data_fim_velocidade").val()

			cont = 0
			soma = 0

			timeVelocidade.map((e) => {
				if(e >= data_ini && e <= data_fim){
					soma += dataVelocidade[timeVelocidade.indexOf(e)]
					cont++;
				}
			})

			media = soma / cont;
			$("#mediaVal").text("Média:" + media.toFixed(2))

			
		})

		$("#mediaTemperatura").on('click', function(){
			data_ini = $("#data_ini_temperatura").val()
